<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:id="@+id/mainLayout"
android:weightSum="1"
tools:context="com.example.cmpickle.basicsms.ConversationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Widget.AppCompat.ActionBar.Solid">

        <ImageButton
            android:id="@+id/btnReceive"
            android:src="@drawable/ic_arrow_back_blue"
            android:background="@color/transparent"
            android:contentDescription="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:onClick="goToReceive"/>

        <TextView
            android:id="@+id/conversationTitle"
            android:text="@string/conversation"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"
            android:background="#07000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ToggleButton
            android:id="@+id/toggleEncryption"
            android:background="@drawable/toggle_encryption"
            android:layout_gravity="end"
            android:checked="true"
            android:textOn=""
            android:textOff=""
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>

<ListView
    android:id="@+id/SMSList"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:layout_gravity="bottom"
    android:stackFromBottom="false">
</ListView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:gravity="top|start"
            android:layout_weight="3"
            android:hint="@string/typeMessage"
            android:textColorHint="@color/textHint"
            android:inputType="textMultiLine"/>

        <ImageButton
            android:id="@+id/btnSendSMS"
            android:src="@drawable/ic_send_blue"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:text="@string/send"/>
    </LinearLayout>

</LinearLayout>
